#!/usr/bin/env bash
#
#
THE_ARGS="$@"
THIS_DIR=$(dirname "$(dirname $0)")

if [[ -z "$@" ]]; then
  action="watch"
else
  action=$1
  shift
fi

set -u -e -o pipefail

watch () {
  cmd () {
    if [[ -z "$@" ]]; then
      path="some.file"
    else
      path="$1"
      shift
    fi
  }
  cmd

  echo -e "\n=== Watching: $files"
  while read -r CHANGE; do
    dir=$(echo "$CHANGE" | cut -d' ' -f 1)
    path="${dir}$(echo "$CHANGE" | cut -d' ' -f 3)"
    file="$(basename $path)"

    echo -e "\n=== $CHANGE ($path)"

    if [[ "$path" =~ "$0" ]]; then
      echo "=== Reloading..."
      break
    fi

    if [[ "$file" =~ ".some_ext" ]]; then
      cmd $path
    fi
  done < <(inotifywait --quiet --monitor --event close_write some_file "$0") || exit 1
  $0 watch $THE_ARGS
}

case $action in
  help|--help)
    bash_setup print_help $0
    ;;

  switch)
    nums="$(find "$THIS_DIR/tmp" -mindepth 1 -maxdepth 1 -type d -iname "*emacs*" | xargs -I DIR basename DIR)"
    if [[ -z "$@" ]]; then
      cat -n <(echo -e "$nums")
      exit 0
    fi
    dir="$(echo -e "$nums" | tail -n+"$1" | head -n 1)"
    full="$THIS_DIR/tmp/$dir"
    if [[ ! -d "$full" ]]; then
      echo "!!! invalid selection" 1>&2
      exit 1
    fi

    set -x
    rm ~/.emacs.d
    ln -s "$full" "$HOME/.emacs.d"
    exit 0
    ;;

  install)
    # === install
    if [[ ! -f ~/.spacemacs ]]; then
      bash_setup make_link $THIS_DIR/files/.spacemacs $HOME/.spacemacs
    fi
    if [[ ! -d ~/.emacs.d && -d tmp/.emacs.d.spacemacs ]]; then
      bash_setup make_link $THIS_DIR/tmp/.emacs.d.spacemacs $HOME/.emacs.d
    fi
    ;;
  *)
    $action $THE_ARGS
    ;;

esac
